<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/timerMode"
        android:entryValues="@array/timerModeValue"
        android:key="timerMode"
        android:summary="%s"
        android:title="タイマーモード" />
    <EditTextPreference
        android:defaultValue="60"
        android:inputType="number"
        android:key="moveTime"
        android:maxLength="4"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="60秒"
        android:title="1手時間" />
    <EditTextPreference
        android:defaultValue="60"
        android:inputType="number"
        android:key="playerTime"
        android:maxLength="4"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="60秒"
        android:title="持ち時間" />
    <EditTextPreference
        android:defaultValue="60"
        android:inputType="number"
        android:key="thinkingTime"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="60秒"
        android:title="思考時間" />
    <ListPreference
        android:defaultValue="2"
        android:entries="@array/playersNumber"
        android:entryValues="@array/playersNumberValue"
        android:key="playersNumber"
        android:summary="%s"
        android:title="人数" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="vibration"
        android:summary="残り時間が少なくなると振動します"
        android:title="バイブレーション" />
    <Preference
        android:key="startTimer"
        android:title="スタート"
        android:widgetLayout="@layout/button_start" />
</PreferenceScreen>